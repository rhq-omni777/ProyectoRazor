@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a la Universidad</h1>
    <p>Sistema de Gestión de Estudiantes, Cursos e Inscripciones</p>
</div>

<div class="row mt-5">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Estudiantes</h5>
                <p class="card-text">Gestiona los estudiantes del sistema</p>
                <a href="/Students" class="btn btn-primary">Ir a Estudiantes</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Cursos</h5>
                <p class="card-text">Gestiona los cursos disponibles</p>
                <a href="/Courses" class="btn btn-primary">Ir a Cursos</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Inscripciones</h5>
                <p class="card-text">Gestiona las inscripciones de estudiantes</p>
                <a href="/Enrollments" class="btn btn-primary">Ir a Inscripciones</a>
            </div>
        </div>
    </div>
</div>
