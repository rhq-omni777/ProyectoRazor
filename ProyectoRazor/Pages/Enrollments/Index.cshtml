@page
@model ProyectoRazor.Pages.Enrollments.IndexModel

@{
    ViewData["Title"] = "Inscripciones";
}

<h1>Inscripciones</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Agregar Nueva Inscripción</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Estudiante
            </th>
            <th>
                Curso
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Grade)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Enrollment) {
        <tr>
            <td>
                @item.Student.FirstName @item.Student.LastName
            </td>
            <td>
                @item.Course.Title
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
