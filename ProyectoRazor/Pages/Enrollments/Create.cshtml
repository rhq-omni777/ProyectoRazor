@page
@model ProyectoRazor.Pages.Enrollments.CreateModel

@{
    ViewData["Title"] = "Crear Inscripción";
}

<h1>Crear Nueva Inscripción</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Enrollment.StudentId" class="form-label">Estudiante</label>
                <select asp-for="Enrollment.StudentId" class="form-control" asp-items="ViewBag.StudentId">
                    <option value="">-- Selecciona un estudiante --</option>
                </select>
                <span asp-validation-for="Enrollment.StudentId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Enrollment.CourseId" class="form-label">Curso</label>
                <select asp-for="Enrollment.CourseId" class="form-control" asp-items="ViewBag.CourseId">
                    <option value="">-- Selecciona un curso --</option>
                </select>
                <span asp-validation-for="Enrollment.CourseId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Enrollment.Grade" class="form-label">Calificación</label>
                <input asp-for="Enrollment.Grade" class="form-control" />
                <span asp-validation-for="Enrollment.Grade" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
