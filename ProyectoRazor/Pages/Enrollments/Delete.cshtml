@page
@model ProyectoRazor.Pages.Enrollments.DeleteModel

@{
    ViewData["Title"] = "Eliminar Inscripción";
}

<h1>Eliminar Inscripción</h1>

<h3>¿Estás seguro de que deseas eliminar esta inscripción?</h3>
<div>
    <h4>Detalles de la Inscripción</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Estudiante
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Student.FirstName) @Html.DisplayFor(model => model.Enrollment.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            Curso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Course.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Grade)
        </dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
